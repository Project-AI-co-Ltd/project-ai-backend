{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@app/backend-libs/(.*)": "<rootDir>/../libs/backend-libs/src/$1",
    "@app/backend-libs": "<rootDir>/../libs/backend-libs/src"
  }
}